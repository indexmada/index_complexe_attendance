<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="add_field_image_in_attendance_view" model="ir.ui.view">
		<field name="name">hr.attendance.add_field.image</field>
		<field name="model">hr.attendance</field>
		<field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
		<field name="arch" type="xml">
			<field name="worked_hours" position="after">
				<field name="custom_attendance_image" widget="image" optional="hide"/>
			</field>
		</field>
	</record>
</odoo>